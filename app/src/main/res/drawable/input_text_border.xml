<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_hovered="false" android:state_selected="false">
        <shape android:shape="rectangle">

            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/high_light" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_hovered="false" android:state_selected="false">
        <shape android:shape="rectangle">

            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/error" />
        </shape>
    </item>

    <item android:state_hovered="true">
        <shape android:shape="rectangle">

            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/error" />
        </shape>
    </item>

</selector>